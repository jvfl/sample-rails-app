<h2><%= t(:change_my_pass) %></h2>

<div class="row">
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
    
      <div class="form-group">
        <%= f.label :password, t(:new_pass) %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => 'form-control' %>
      </div>
       <% if @minimum_password_length %>
          <span id ='helpBlock' class="help-block"> 
            <%= "#{t(:password_conditions, :minimum_password_length => @minimum_password_length)}" %>
          </span>
        <% end %>
    
      <div class="form-group">
        <%= f.label :password_confirmation, t(:conf_new_pass) %>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.submit t(:change_pass), :class => 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
